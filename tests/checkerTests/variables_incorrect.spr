x: nonExistent; // Type does not exist yet (1)

i: boolean;
i: boolean; // Already declared (2)
i: integer; // Already declared (type doesn't matter) (3)
i: boolean := 2; // Already declared (instantiation does not matter) (4)

a: boolean := i; // Incorrect type; a was first declared as integer (5)
a: boolean; // Although a was declared incorrectly, it's still declared! (5)

b: boolean := a; // Errors do not propagate; this is correct! (6)

